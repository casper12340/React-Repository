{
  "name": "@kustomer/apps-react-client",
  "version": "3.0.3",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/kustomer/apps-sdk/tree/main/packages/react"
  },
  "type": "module",
  "types": "./dist/index.d.cts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": [
    "dist/*"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "jest-presets/jest/client"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "custom"
    ]
  },
  "scripts": {
    "clean": "npx rimraf dist coverage node_modules .turbo",
    "dev": "storybook dev -p 6006",
    "build": "tsup && storybook build",
    "test": "jest",
    "lint": "eslint . --ext .ts --resolve-plugins-relative-to ../../tools/eslint-config-custom",
    "lint:fix": "eslint . --ext .ts --fix --resolve-plugins-relative-to ../../tools/eslint-config-custom"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@kustomer/apps-client": "*",
    "@kustomer/apps-tokens": "*",
    "@mui/icons-material": "^5.14.13",
    "@mui/material": "^5.14.13",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-switch": "^1.0.3",
    "@stitches/react": "^1.2.8"
  },
  "peerDependencies": {
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^7.5.0",
    "@storybook/addon-essentials": "^7.5.0",
    "@storybook/addon-interactions": "^7.5.0",
    "@storybook/addon-links": "^7.5.0",
    "@storybook/addon-mdx-gfm": "^7.5.0",
    "@storybook/blocks": "^7.5.0",
    "@storybook/client-api": "^7.5.0",
    "@storybook/react": "^7.5.0",
    "@storybook/react-vite": "^7.5.0",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "eslint-config-custom": "*",
    "jest-presets": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.5.0",
    "storybook-addon-rtl": "^0.5.0",
    "storybook-dark-mode": "^3.0.1",
    "tsconfig": "*"
  }
}
