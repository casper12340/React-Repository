{
  "name": "@kustomer/apps-client",
  "version": "3.0.3",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/kustomer/apps-sdk/tree/main/packages/client"
  },
  "type": "module",
  "types": "./dist/index.d.cts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": [
    "dist/*"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "jest-presets/jest/client"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "custom"
    ]
  },
  "scripts": {
    "clean": "npx rimraf dist coverage node_modules .turbo",
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "jest",
    "lint": "eslint . --ext .ts --resolve-plugins-relative-to ../../tools/eslint-config-custom",
    "lint:fix": "eslint . --ext .ts --fix --resolve-plugins-relative-to ../../tools/eslint-config-custom"
  },
  "dependencies": {
    "@kustomer/apps-common": "*",
    "sqlstring": "^2.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/sqlstring": "^2.3.2",
    "@types/uuid": "^9.0.8",
    "eslint-config-custom": "*",
    "jest-presets": "*",
    "tsconfig": "*"
  }
}
