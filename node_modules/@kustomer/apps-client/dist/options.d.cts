import { KLogger, ENVS } from '@kustomer/apps-common';

type KAppClientOptions = {
    /** The internally used name for an app. Can not include spaces or dashes (unique) */
    app: string;
    /** The apps visibility (public or private) */
    visibility?: 'public' | 'private';
    /** Logger override that can be used via `app.log.(info | warn | error)` */
    logger?: KLogger;
    /**
     * Whether or not component names should be prefixed ex `{{app_name}}--{{component_name}}`.
     * @private
     * @default true
     */
    namespace?: boolean;
    /**
     * The environment the app will run in (defaults to production)
     * @private
     */
    env?: keyof typeof ENVS;
    /**
     * Whether or not we should automatically fetch data from S3 if a URL exists
     * @private
     * @default true
     */
    shouldFetchData?: boolean;
};
type KAppModalOptions<Data = unknown> = {
    /** The URL to the modal */
    url?: string;
    /** The title of the modal */
    title?: string;
    /** The height of the modal */
    height?: string;
    /** The width of the modal */
    width?: string;
    /** The data to pass to the modal */
    data?: Data;
    /** Whether or not the modal should be visible */
    visible?: boolean;
};

export { KAppClientOptions, KAppModalOptions };
